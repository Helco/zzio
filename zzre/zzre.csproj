<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>NU1605;nullable;CS8618</WarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>1701;1702;DEA0005,DEA0022</NoWarn>

    <ShaderVariantDef>shaders/ShaderVariants.json</ShaderVariantDef>
    <EmbedGeneratedShaders>true</EmbedGeneratedShaders>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>TRACE;DEBUG</DefineConstants>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PublishTrimmed>true</PublishTrimmed>
    <PublishReadyToRunShowWarnings>true</PublishReadyToRunShowWarnings>
    <TrimMode>link</TrimMode>
  </PropertyGroup>

  <ItemGroup>
    <ShaderSourceDir Include="shaders" />
    <EmbeddedResource Include="shaders\*.frag" />
    <EmbeddedResource Include="shaders\*.vert" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DefaultEcs.Analyzer" Version="0.17.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Pfim" Version="0.11.1" />
    <PackageReference Include="Veldrid.ImageSharp" Version="4.9.0-beta2-ga23dc39a1b" />
    <PackageReference Include="Veldrid.StartupUtilities" Version="4.9.0-beta2-ga23dc39a1b" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'=='Debug'">
    <PackageReference Include="Veldrid.RenderDoc" Version="1.0.1-ga23dc39a1b" />
    <PackageReference Include="DefaultEcs" Version="1.0.0-safe" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'!='Debug'">
    <PackageReference Include="DefaultEcs" Version="0.17.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Veldrid.ImGui\Veldrid.ImGui.csproj" />
    <ProjectReference Include="..\zzio\zzio.csproj" />
    <ProjectReference Include="..\zzre.core\zzre.core.csproj" />
  </ItemGroup>

</Project>
